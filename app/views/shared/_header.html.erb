<div class="header">
  <%= form_tag search_articles_path, method: :get do %>
    <input type="text" name="keyword" placeholder="記事の検索" class="search__form__area" style="height:20px;width:200px;position:absolute;left:10px;top:30px;border-radius:3px;">
    <button type="submit" class="search__btn" style="position:absolute;left:190px;top:30px;background-color:white;border:1px white solid;">
      <i class="fa fa-search"></i>
    </button>
  <% end %>
  <h2><%= link_to "appilcation", articles_path, class: "header__app_title" %></h2>
  <% if user_signed_in? %>
    <%= link_to "マイページ", user_path(current_user.id), class: "header__my_page" %>
    <%= link_to "ログアウト", destroy_user_session_path, class: "header__new_account", method: :delete %>
    <%= link_to "新規作成", new_article_path, class: "header__new_article" %>
  <% else%>
    <%= link_to "ログイン", new_user_session_path, class: "header__new_account" %>
  <% end %>
</div>