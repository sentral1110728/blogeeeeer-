<%= render 'shared/header' %>
<div class="container">
  <div class="container_main">
    <%= form_tag search_articles_path, method: :get do %>
      <%= select_tag :category_id, options_from_collection_for_select(@category_list, :id, :category_name), include_blank: true %>
      <input type="text" name="keyword" placeholder="記事の検索">
      <input type="submit" value="検索">
    <% end %>
    <div class="articles">
      <%= render @articles %>
      <%= will_paginate @articles, :param_name => 'page', :previous_label => ' &lt 前へ', :next_label => '次へ &gt' %>
    </div>
  </div>
</div>